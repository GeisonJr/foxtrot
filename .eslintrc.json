{
	"env": {
		"jest": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"standard"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-undef": "off",
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off",
		"semi": [
			"error",
			"never"
		],
		"space-before-function-paren": [
			"error",
			"never"
		]
	}
}
